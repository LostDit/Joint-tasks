#include <iostream>
using namespace std;

// Функция для вычисления факториала
long long factorial(int n) {
    long long result = 1;
    for (int i = 1; i <= n; ++i) {
        result *= i;
    }
    return result;
}

// Функция для вычисления биномиального коэффициента
long long binomialCoefficient(int n, int k) {
    return factorial(n) / (factorial(k) * factorial(n - k));
}

int main() {
    int n, k;

    // Ввод значений n и k с проверкой корректности
    cout << "Введите n (n >= 0): ";
    cin >> n;
    if (n < 0) {
        cout << "Значение n должно быть >= 0." << endl;
        return 1;
    }

    cout << "Введите k (0 <= k <= n): ";
    cin >> k;
    if (k < 0 || k > n) {
        cout << "Значение k должно быть в диапазоне 0 <= k <= n." << endl;
        return 1;
    }

    // Вывод биномиального коэффициента
    cout << "Биномиальный коэффициент C(" << n << ", " << k << ") = " 
         << binomialCoefficient(n, k) << endl;

    return 0;
}
